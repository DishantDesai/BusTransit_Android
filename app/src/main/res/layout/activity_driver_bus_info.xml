<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.DriverBusInfo">

    <TextView
        android:id="@+id/admin_school_info_bus_no"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Bus Number"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/admin_school_allDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/admin_school_info_bus_no"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapeyellow"
            android:id="@+id/goToSchool"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/school_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Name"
                android:paddingTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/admin_school_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 514 xxx xxxx"
                app:layout_constraintTop_toBottomOf="@+id/school_name_tag"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/school_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Address"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/admin_school_info_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/school_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="96 Rue Jacqus Cartier,Gaspe,G4X 2S8"
                app:layout_constraintTop_toBottomOf="@+id/school_address"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                />
            <TextView
                android:id="@+id/school_end_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Address"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/school_address_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="30dp"

                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/end_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEGEP de la Gaspesie,Montreal,Qebec"
                app:layout_constraintTop_toBottomOf="@+id/school_end_address"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shapeyellow"
            android:id="@+id/driverInfo"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/driver_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_account_circle_24"
                app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
                android:scaleType="centerCrop"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/admin_school_info_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Namri Patil"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/driver_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/trip_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip Status"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/admin_school_info_driver_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/admin_school_info_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                app:layout_constraintTop_toBottomOf="@+id/trip_status_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/trip_direction_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip Direction"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/admin_school_info_on_off"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Going to School"
                app:layout_constraintTop_toBottomOf="@+id/trip_direction_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"

                />

            <Button
                android:id="@+id/relese_driver"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:text="Release Driver"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/direction"
                android:layout_marginBottom="20dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_school_allDetails"
        tools:context=".DriverBusInfo" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>